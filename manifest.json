{
  "manifest_version": 3,
  "name": "Linkr URL Manager",
  "version": "1.0",
  "description": "Manage your favorite URLs with custom buttons",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16x16.png",
      "48": "images/icon48x48.png",
      "128": "images/icon128x128.png"
    }
  },
  "permissions": ["storage"],
  "icons": {
    "16": "images/icon16x16.png",
    "48": "images/icon48x48.png",
    "128": "images/icon128x128.png"
  }
}
